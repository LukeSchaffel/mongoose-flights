<%- include('../partials/html-head') %> 
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav') %> 
<body>
  <h1>Flight Number <%= flight.flightNo  %>  </h1>
  <section>
    <div>Airline:</div>
    <div><%= flight.airline %> </div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>
    <div>Departs At:</div>
    <div><%= flight.departs %></div>
  </section>

  <h2>Meals</h2>

  <% if (flight.meals.length) { %>
    <table>
      <thead>
        <tr>
          <th>Meal</th>
        </tr>
      </thead>
    <tbody>
      <% flight.meals.forEach(function(meal){ %> 
      <tr>
        <td><%= meal.name %></td>
      </tr>
      <% }) %> 
    </tbody>
    </table>
      
  
    <% } else { %>
      <h3>No Meals Yet</h3>
      <% } %> 




  <form 
  id="add-meal-form"
  action="/flights/<%= flight._id %>/meals"
  method="post"
  >
  <select>
    <% meals.forEach(meal => { %>
      <option><%= meal.name %> </option>
      
      <% }) %> 
    </select>
    <button type="submit">Add Meal</button>
  </form>
  
  
  <h2>Tickets</h2>

  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
  <label for="seat-textarea">Seat: (required pattern: [A-F][1-9])</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label for="price">Price:</label>
  <input name="price" type="number" min="0">
  <button type="submit">Add Ticket</button>

  </form>

  <% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
  <tbody>
    <% flight.tickets.forEach(function(ticket){ %> 
    <tr>
      <td><%= ticket.seat %></td>
      <td><%= ticket.price %></td>
    </tr>
    <% }) %> 
  </tbody>
  </table>
    

  <% } else { %>
    <h3>No Tickets Yet</h3>
    <% } %> 
  
</body>
</html>

