<%- include('../partials/html-head') %> 
<link rel="stylesheet" href="/stylesheets/flights/index.css">
<%- include('../partials/nav') %> 

<main>
  <h1> <%= title  %> </h1>
  <p>Please Make Sure the Meal is not Already On the List</p>
  <form id="add-meal-form" action="/meals" method="post">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
<table>
  <thead>
    <tr>
      <th>Meal</th>
    </tr>
  </thead>

  <tbody>
    <% meals.forEach(meal => { %>
     <tr>
       <td>
         <%= meal.name %> 
       </td>
     </tr>
    <% }) %>

  </tbody>
</table>


</main>



